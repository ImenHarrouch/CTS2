# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Home page
#GET /                                        controllers.Application.index()

GET            /                               controllers.Website.index()
POST           /register                       controllers.Website.register()
POST           /login                          controllers.Website.login()

POST          /tools1                          controllers.Website.tools()
GET           /buy                             controllers.Website.buy()

POST          /tools                           controllers.Website.payeeinfo()
POST          /tools/confirmation              controllers.Website.confirmation()
# POST        /tools/:id                       controllers.Website.show(id:Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
